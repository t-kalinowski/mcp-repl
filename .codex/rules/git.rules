# Allow staging
prefix_rule(
    pattern = ["git", "add"],
    decision = "allow",
    match = [
        "git add -A",
        "git add path/to/file",
    ],
)

# Allow committing
prefix_rule(
    pattern = ["git", "commit"],
    decision = "allow",
    match = [
        "git commit -m \"msg\"",
        "git commit --amend",
    ],
)

